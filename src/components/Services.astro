---
import { Icon } from 'astro-icon'
import data from '../data/services.json'
---

<section class="services container-sm">
  <div class="sr-only">Services</div>
  {
    data.map((service) => (
      <div class="service">
        <div class="service--icon text-white">
          <Icon name={service.icon} width={30} />
        </div>
        <h3>{service.name}</h3>
        <p class="text-muted">{service.content}</p>
      </div>
    ))
  }
</section>

<style>
  .services {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: center;
    gap: var(--size-fluid-2);
  }
  .service {
    /* border: 1px solid white; */
    display: grid;
    flex: 0 1 300px;
    gap: var(--size-3);
    padding: var(--size-fluid-2);
  }
  .service--icon {
    justify-self: start;
    padding: var(--size-fluid-1);
    border-radius: 50%;
    background-color: var(--accent1);
  }
</style>
